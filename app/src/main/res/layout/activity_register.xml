<?xml version="1.0" encoding="utf-8"?>

<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_blue_50"
    android:fillViewport="true">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Register"
    android:id="@+id/regActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="16dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout style="@style/per_layout_user_reg">

            <TextView
                style="@style/fields_user_reg"
                android:text="Division" />

            <Spinner
                android:id="@+id/spnDivision"
                style="@style/spinner_user_reg" />
        </LinearLayout>

        <LinearLayout style="@style/per_layout_user_reg">

            <TextView
                style="@style/fields_user_reg"
                android:text="District" />

            <Spinner
                android:id="@+id/spnDistrict"
                style="@style/spinner_user_reg" />
        </LinearLayout>

        <LinearLayout style="@style/per_layout_user_reg">

            <TextView
                style="@style/fields_user_reg"
                android:text="Taluka" />

            <Spinner
                android:id="@+id/spnTaluka"
                style="@style/spinner_user_reg" />
        </LinearLayout>

        <LinearLayout style="@style/per_layout_user_reg">

            <TextView
                style="@style/fields_user_reg"
                android:text="Designation" />

            <Spinner
                android:id="@+id/spnDesignation"
                style="@style/spinner_user_reg" />

        </LinearLayout>

        <LinearLayout style="@style/per_layout_user_reg">

            <TextView
                style="@style/fields_user_reg"
                android:text="First Name" />

            <EditText
                android:id="@+id/regFname"
                style="@style/data_user_reg"
                android:background="@drawable/bg_rounded"
                android:ems="10"
                android:inputType="textPersonName" />

        </LinearLayout>

        <LinearLayout style="@style/per_layout_user_reg">

            <TextView
                style="@style/fields_user_reg"
                android:text="Middle Name" />

            <EditText
                android:id="@+id/regMname"
                style="@style/data_user_reg"
                android:background="@drawable/bg_rounded"
                android:ems="10"
                android:inputType="textPersonName" />

        </LinearLayout>

        <LinearLayout style="@style/per_layout_user_reg">

            <TextView
                style="@style/fields_user_reg"
                android:text="Surname" />

            <EditText
                android:id="@+id/regLname"
                style="@style/data_user_reg"
                android:background="@drawable/bg_rounded"
                android:ems="10"
                android:inputType="textPersonName" />

        </LinearLayout>

        <LinearLayout style="@style/per_layout_user_reg">

            <TextView
                style="@style/fields_user_reg"
                android:text="DOB" />

            <EditText
                android:id="@+id/regDob"
                style="@style/data_user_reg"
                android:background="@drawable/bg_rounded"

                android:clickable="false"
                android:cursorVisible="false"
                android:ems="10"
                android:focusable="false"

                android:focusableInTouchMode="false"
                android:inputType="date" />

        </LinearLayout>


        <LinearLayout style="@style/per_layout_user_reg">

            <TextView
                style="@style/fields_user_reg"
                android:text="Gender" />

            <Spinner
                android:id="@+id/spnGender"
                style="@style/spinner_user_reg" />
        </LinearLayout>

        <LinearLayout style="@style/per_layout_user_reg">

            <TextView
                style="@style/fields_user_reg"
                android:text="Address" />

            <EditText
                android:id="@+id/regAddress"
                style="@style/data_user_reg"
                android:background="@drawable/bg_rounded"
                android:ems="10"
                android:inputType="textPersonName" />

        </LinearLayout>

        <LinearLayout style="@style/per_layout_user_reg">

            <TextView
                style="@style/fields_user_reg"
                android:text="Mobile No (Username)" />

            <EditText
                android:id="@+id/regMobile"
                style="@style/data_user_reg"
                android:background="@drawable/bg_rounded"
                android:ems="10"
                android:inputType="number"
                android:maxLength="10" />

        </LinearLayout>

        <LinearLayout style="@style/per_layout_user_reg">

            <TextView
                style="@style/fields_user_reg"
                android:text="Password" />

            <EditText
                android:id="@+id/regPass"
                style="@style/data_user_reg"
                android:background="@drawable/bg_rounded"
                android:ems="10"
                android:inputType="textPassword"
                android:maxLength="10" />

        </LinearLayout>

        <LinearLayout style="@style/per_layout_user_reg">

            <TextView
                style="@style/fields_user_reg"
                android:text="SEVARTH ID" />

            <EditText
                android:id="@+id/regSevarthId"
                style="@style/data_user_reg"
                android:background="@drawable/bg_rounded"
                android:ems="10"
                android:maxLength="11"
                android:inputType="textPersonName" />

        </LinearLayout>

        <LinearLayout style="@style/per_layout_user_reg">

            <TextView
                style="@style/fields_user_reg"
                android:text="Full Name" />

            <TextView
                android:id="@+id/txtFullName"
                style="@style/data_user_reg"
                android:background="@drawable/bg_rounded"
                android:backgroundTint="@color/grey"
                android:textColor="@color/red"
                android:textStyle="bold"
                android:text="" />

        </LinearLayout>

        <LinearLayout style="@style/per_layout_user_reg"
            android:gravity="center_horizontal">

            <Button
                android:id="@+id/regSubmit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Submit"
                android:textColor="@color/white"/>

        </LinearLayout>

    </LinearLayout>
    
</androidx.constraintlayout.widget.ConstraintLayout>


</androidx.core.widget.NestedScrollView>