<?xml version="1.0" encoding="utf-8"?>

<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_blue_50"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".UserProfile"
        android:id="@+id/UserProfileActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="16dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout style="@style/per_layout_user_reg">

                <TextView
                    style="@style/fields_user_reg"
                    android:text="First Name" />

                <EditText
                    android:id="@+id/uFname"
                    style="@style/data_user_reg"
                    android:background="@drawable/bg_rounded"
                    android:ems="10"
                    android:inputType="textPersonName" />

            </LinearLayout>

            <LinearLayout style="@style/per_layout_user_reg">

                <TextView
                    style="@style/fields_user_reg"
                    android:text="Middle Name" />

                <EditText
                    android:id="@+id/uMname"
                    style="@style/data_user_reg"
                    android:background="@drawable/bg_rounded"
                    android:ems="10"
                    android:inputType="textPersonName"  />

            </LinearLayout>

            <LinearLayout style="@style/per_layout_user_reg">

                <TextView
                    style="@style/fields_user_reg"
                    android:text="Surname" />

                <EditText
                    android:id="@+id/uLname"
                    style="@style/data_user_reg"
                    android:background="@drawable/bg_rounded"
                    android:ems="10"
                    android:inputType="textPersonName" />

            </LinearLayout>

            <LinearLayout style="@style/per_layout_user_reg">

                <TextView
                    style="@style/fields_user_reg"
                    android:text="DOB" />

                <EditText
                    android:id="@+id/uDob"
                    style="@style/data_user_reg"
                    android:background="@drawable/bg_rounded"

                    android:clickable="false"
                    android:cursorVisible="false"
                    android:ems="10"
                    android:focusable="false"

                    android:focusableInTouchMode="false"
                    android:inputType="date" />

            </LinearLayout>


            <LinearLayout style="@style/per_layout_user_reg">

                <TextView
                    style="@style/fields_user_reg"
                    android:text="Gender" />

                <Spinner
                    android:id="@+id/uGender"
                    style="@style/spinner_user_reg" />
            </LinearLayout>

            <LinearLayout style="@style/per_layout_user_reg">

                <TextView
                    style="@style/fields_user_reg"
                    android:text="Address" />

                <EditText
                    android:id="@+id/uAddress"
                    style="@style/data_user_reg"
                    android:background="@drawable/bg_rounded"
                    android:ems="10"
                    android:inputType="textPersonName" />
6
            </LinearLayout>

            <LinearLayout style="@style/per_layout_user_reg">

                <TextView
                    style="@style/fields_user_reg"
                    android:text="Mobile No (Username)" />

                <TextView
                    android:id="@+id/uMobile"
                    style="@style/data_user_reg"
                    android:backgroundTint="@color/grey"
                    android:background="@drawable/bg_rounded"
                    android:textColor="@color/red"
                    android:textStyle="bold"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="12dp"
                android:gravity="center_horizontal">

                <Button
                    android:id="@+id/btnSaveInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Save"
                    android:layout_marginRight="8dp"
                    android:backgroundTint="@color/green_500"/>

                <Button
                    android:id="@+id/btnUpdatePass"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginLeft="8dp"
                    android:text="Update Password"
                    android:backgroundTint="@color/red_500"/>


            </LinearLayout>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.core.widget.NestedScrollView>